---
import FluidContainer from "../components/Container/FluidContainer.astro";
import BaseLayout from "../components/General/BaseLayout.astro";
import Photos from "../components/Homepage/Photos.astro";
import Resume from "../components/Homepage/Resume.astro";
import GithubIcon from "../components/Icon/GithubIcon.astro";
import LinkedInIcon from "../components/Icon/LinkedInIcon.astro";
import SocialLink from "../components/Icon/SocialLink.astro";
import TwitterIcon from "../components/Icon/TwitterIcon.astro";
---

<BaseLayout>
  <FluidContainer class="mt-9">
    <div class="max-w-2xl">
      <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
        Software designer, founder, and amateur astronaut.
      </h1>
      <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
        I'm Zac, a software developer and entrepreneur based in Upstate New York. I'm the founder and CEO of Planetaria,
        where we develop technologies that empower regular people to explore space on their own terms.
      </p>
      <div class="mt-6 flex gap-6">
        <SocialLink href="https://www.linkedin.com/in/zrclark/" aria-label="Connect on LinkedIn">
          <LinkedInIcon />
        </SocialLink>
        <SocialLink href="https://github.com/zandoh" aria-label="Follow on GitHub">
          <GithubIcon />
        </SocialLink>
        <SocialLink href="https://twitter.com/zandoh_" aria-label="Follow on Twitter">
          <TwitterIcon />
        </SocialLink>
        {/* @TODO: RSS Feed? */}
      </div>
    </div>
  </FluidContainer>
  <Photos />
  <FluidContainer class="mt-24 md:mt-28">
    <div class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2">
      <div>hold</div>
      <!-- <Articles /> -->
      <div class="space-y-10 lg:pl-16 xl:pl-24">
        <Resume />
      </div>
    </div>
  </FluidContainer>
</BaseLayout>
