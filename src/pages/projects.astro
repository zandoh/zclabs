---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import coffeeSvg from "../assets/projects/coffee.png";
import BaseLayout from "../components/General/BaseLayout.astro";
import PageLayout from "../components/General/PageLayout.astro";
import LinkIcon from "../components/Icon/LinkIcon.astro";

interface Project {
  name: string;
  description: string;
  logo: ImageMetadata;
  link: {
    href: string;
    label: string;
  };
}

const projects: readonly Project[] = [
  {
    name: "Test 1",
    description: "Description Description Description Description Description",
    link: { href: "//github.com", label: "github.com" },
    logo: coffeeSvg,
  },
] as const;
---

<BaseLayout title="Projects - Zac Clark" description="Selected projects to share">
  <PageLayout
    title="Projects"
    intro="Over the years, I've embarked on numerous projects, primarily closed source for different companies. However, here are a few that I can share."
  >
    <ul role="list" class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <li class="group relative flex flex-col items-start">
            <div class="relative z-10 flex h-12 w-12 items-center justify-center rounded-full bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
              <Image src={project.logo} alt="" class="h-8 w-8" />
            </div>
            <h2 class="mt-6 text-base font-semibold text-zinc-800 dark:text-zinc-100">
              <div class="absolute -inset-x-4 -inset-y-6 z-0 scale-95 bg-zinc-50 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 dark:bg-zinc-800/50 sm:-inset-x-6 sm:rounded-2xl" />
              <a href={project.link.href} target="_blank" rel="noopener noreferrer">
                <span class="absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl" />
                <span class="relative z-10">{project.name}</span>
              </a>
            </h2>
            <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">{project.description}</p>
            <p class="relative z-10 mt-6 flex text-sm font-medium text-zinc-400 transition group-hover:text-teal-500 dark:text-zinc-200">
              <LinkIcon class="h-6 w-6 flex-none" />
              <span class="ml-2">{project.link.label}</span>
            </p>
          </li>
        ))
      }
    </ul>
  </PageLayout>
</BaseLayout>
