---
import { ViewTransitions } from "astro:transitions";
import Footer from "../Footer/Footer.astro";
import Header from "../Header/Header.astro";
import BaseFont from "./BaseFont.astro";
import BaseMeta from "./BaseMeta.astro";
import ShamelessPlug from "./ShamelessPlug.astro";

interface Props {
  title: string;
  description: string;
  author?: string;
}

const { title, description, author } = Astro.props;
---

<html lang="en" class="h-full antialiased">
  <head>
    <BaseMeta title={title} description={description} author={author} />
    <BaseFont />
    <ShamelessPlug />
    <ViewTransitions />
  </head>
  <body class="flex h-full bg-zinc-50 dark:bg-black">
    <div class="flex w-full">
      <div class="fixed inset-0 flex justify-center sm:px-8">
        <div class="flex w-full max-w-7xl lg:px-8">
          <div class="w-full bg-white ring-1 ring-zinc-100 dark:bg-zinc-900 dark:ring-zinc-300/20"></div>
        </div>
      </div>
      <div class="relative flex w-full flex-col">
        <Header />
        <main class="mt-20 flex-auto"><slot /></main>
        <Footer />
      </div>
    </div>
  </body>
</html>
