---
export interface NavigationLinkProps {
  href: string;
  pathString: string;
}

const { href, pathString } = Astro.props;
---

<li>
  <a
    class="block py-2 pr-4 pl-3 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:p-0 dark:text-gray-400 md:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent h-auto w-6"
    href={href}
    target="_blank"
    rel="noopener noreferrer"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 16 16"
    >
      <Fragment set:html={pathString} />
    </svg>
  </a>
</li>
