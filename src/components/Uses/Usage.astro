---
import type { CollectionEntry } from "astro:content";

interface Props {
  usage: CollectionEntry<"uses">["data"]["data"][number];
}

const { usage } = Astro.props;
---

<li class="group relative flex flex-col items-start">
  <h3 class="text-base font-semibold tracking-tight text-zinc-800 underline dark:text-zinc-100">
    <a href={usage.link} target="_blank" rel="noopener noreferrer">{usage.name}</a>
  </h3>
  <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
    {usage.description}
  </p>
</li>
