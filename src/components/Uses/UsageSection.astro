---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="mb-6 text-2xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-xl">
  {title}
</div>
<div class="-mx-6 grid grid-cols-2 gap-0.5 overflow-hidden sm:mx-0 sm:rounded-2xl md:grid-cols-3">
  <slot />
</div>
