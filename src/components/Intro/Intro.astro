---
import { getCollection } from "astro:content";
import IntroHighlight from "./IntroHighlight.astro";

const featuredProjects = await getCollection("project", (project) => {
  return project.data.isFeatured;
});
---

<section>
  <div
    class="flex justify-between items-center flex-col xl:flex-row xl:space-x-12 space-y-16 xl:space-y-0"
  >
    <div class="flex justify-start items-start flex-col">
      <div>
        <h1
          class="md:text-7xl text-4xl font-black leading-tight text-white xl:w-4/5"
        >
          Hello, I'm <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-green-300 via-blue-500 to-purple-600"
            >Zac Clark</span
          > ðŸ‘‹
        </h1>
      </div>
      <div class="md:mt-4 mt-2">
        <p class="text-base leading-normal text-gray-400 xl:w-96">
          I'm software tinkerer located in Upstate New York. I currently work as
          a Software Engineer building a new product for <span
            class="text-red-400">Bryx</span
          >, a public saftey startup.
        </p>
      </div>
      <div class="mt-12 border-b border-transparent hover:border-white pb-1">
        <a
          href="mailto:zclarkmail+zclabs@gmail.com"
          class="tracking-wide focus:outline-none focus:text-gray-300 text-base font-bold leading-none text-white"
        >
          <p>Lets get in touch ðŸ“¨</p>
        </a>
      </div>
    </div>
    <div class="flex justify-start items-start flex-col xl:w-8/12">
      <p class="text-lg font-bold leading-none text-white">Featured</p>
      {
        featuredProjects.map((project) => (
          <IntroHighlight
            technology={project.data.featuredTechnology}
            title={project.data.title}
            summary={project.data.summary}
            date={project.data.date}
          />
        ))
      }
    </div>
  </div>
</section>
