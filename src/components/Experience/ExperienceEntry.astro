---
export interface ExperienceEntryProps {
  startDate: string;
  endDate: string;
  company: string;
  title: string;
  description: string;
}

const { startDate, endDate, company, title, description } = Astro.props;

const monthNames = [
  "January",
  "February",
  "March",
  "April",
  "May",
  "June",
  "July",
  "August",
  "September",
  "October",
  "November",
  "December",
];

const startDateObj = new Date(startDate);
const formattedStartDate = `${
  monthNames[startDateObj.getMonth()]
} ${startDateObj.getFullYear()}`;
const formattedEndDate =
  endDate === "Current"
    ? "Current"
    : `${monthNames[new Date(endDate).getMonth()]} ${new Date(
        endDate
      ).getFullYear()}`;
---

<li class="mb-10 ml-4">
  <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
    {title}
  </h3>
  <time
    class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{formattedStartDate} - {formattedEndDate}</time
  >
  <span
    class="mb-1 text-sm font-bold leading-none text-gray-400 dark:text-gray-500 ml-2"
    >{company}</span
  >
  <span
    class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400"
    set:html={description}></span>
</li>
