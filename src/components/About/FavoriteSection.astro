---
import type { CollectionEntry } from "astro:content";

interface Props {
  favorite: CollectionEntry<"favorites">["data"];
}

const { favorite } = Astro.props;
---

<ul class="mt-6 flex flex-col gap-2 text-base text-zinc-600 dark:text-zinc-400">
  <li class="text-zinc-800 dark:text-zinc-100">{favorite.heading}:</li>
  {
    favorite.data.map((fav) => (
      <li>
        <a href={fav.link} target="_blank" rel="noopener noreferrer">
          {fav.name}
        </a>
      </li>
    ))
  }
</ul>
